#include<stdio.h>
void merge(int a[],int l,int m,int r)
{
	int n1,n2,i,j,k;
	n1=m+1-l;
	n2=r-m;
	int a1[n1], a2[n2];
	for(i=0;i<n1;i++)
		a1[i]=a[i];
	for(i=0;i<n2;i++)
		a1[i]=a[n1+i];
	i=0,j=0,k=l;
	while(i<n1&&j<n2)
	{
		if(a1[i]<=a2[j])
		{
			a[k]=a1[i];
			k++;
			i++;
		}
		else
		{
			a[k]=a2[j];
			k++;
			j++;
		}
	}
	while(i<n1)
	{
		a[k]=a1[i];
		i++;
		k++;
	}
	while(j<n2)
	{
		a[k]=a2[j];
		j++;
		k++;
	}		
}
void mergesort(int a[],int l,int r)
{
	if(l<r){
		m=l+(r-l)/2;
		mergesort(a,l,m);
		mergesort(a,m+1,r);
		merge(a,l,m,r);
	}
}
